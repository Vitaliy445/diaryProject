@model IEnumerable<diary.Models.Worker>

@{
    ViewData["Title"] = "AddEvent";
    Layout = "~/Views/Shared/_Master.cshtml";
}

@section Header
    {
    <!DOCTYPE html>
    <html>
    <head>
        <title>@ViewData["Title"]</title>
        <meta charset="utf-8">

        <link href="~/css/Form.css" rel="stylesheet">
    </head>
    <body>
        <div class="header-content">
            <div class="header-content-inner">
                <div class="container">
                    <div class="row">
                        <form class="decor" method="post">
                            <div class="form-left-decoration"></div>
                            <div class="form-right-decoration"></div>
                            <div class="circle"></div>
                            <div class="form-inner">
                                <h3>Add Event</h3>
                                <input type="text" name="name" placeholder="Event name" value="@ViewBag.name" /> <br />
                                <input type="date" name="date" value="@ViewBag.date" /> <br />
                                
                                <input type="submit" value="Send">
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
<div>
    @TempData["ButtonValue"]
</div>
}

@section content
    {
}